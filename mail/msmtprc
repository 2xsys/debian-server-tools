# System wide configuration file.
# /etc/msmtprc
# http://msmtp.sourceforge.net/doc/msmtp.html
account default

host mail.szepe.net
port 587

# HELO
domain @@HOSTNAME@@

auto_from on
maildomain @@HOSTNAME@@

add_missing_from_header on
add_missing_date_header on

#     root: admin@szepe.net
aliases /etc/msmtp.aliases

tls on
#tls_trust_file /etc/ssl/certs/ca-certificates.crt

# mail.szepe.net certificate
tls_fingerprint C1:E2:8D:54:3E:FA:DB:8D:04:B9:27:1D:1C:25:66:CB:CB:88:A0:61
# http://gnutls.org/manual/html_node/Priority-Strings.html
tls_priorities SECURE192:+SECURE128:+VERS-TLS-ALL:+AES-256-CBC

# Syslog logging with facility LOG_MAIL instead of the default LOG_USER.
syslog LOG_MAIL
