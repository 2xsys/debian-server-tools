# From Debian package
 check process memcache with pidfile /run/memcached.pid
   group cache
   group memcached
   start program = "/etc/init.d/memcached start"
   stop program = "/etc/init.d/memcached stop"
   if failed host 127.0.0.1 port 11211 and protocol memcache then restart
   if cpu > 60% for 2 cycles then alert
   if cpu > 98% for 5 cycles then restart
   if 5 restarts within 20 cycles then unmonitor
   depend memcache_bin
   depend memcache_rc
   depend memcache_init
   depend memcache_test

 check file memcache_bin with path /usr/bin/memcached
   group memcached
   include /etc/monit/templates/rootbin

 check file memcache_rc with path /etc/memcached.conf
   group memcached
   include /etc/monit/templates/rootrc

 check file memcache_init with path /etc/init.d/memcached
   group memcached
   include /etc/monit/templates/rootbin

 check program memcache_test with path "echo version|nc -q 3 127.0.0.1 11211" with timeout 10 seconds
   group memcached
   if status != 0 then alert
